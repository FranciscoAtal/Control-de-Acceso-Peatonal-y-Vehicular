<div class="card bg-primary text-left mt-3 pb-3 mx-auto w-50">
  <div class="card-body">
    <form action="/creavisitas" method="post">
      <h3 class="card-title text-center m-auto">Ingreso Visitas</h3>
      <div class="mb-3">
        <label class="form-label">Rut</label>
        <input name="rut" type="text" class="form-control">
      </div>
      <div class="mb-3">
        <label class="form-label">Nombres</label>
        <input name="nombres" type="text" class="form-control">
      </div>
      <div class="mb-3">
        <label class="form-label">Apellidos</label>
        <input name="apellidos" type="text" class="form-control">
      </div>
      <div class="mb-3">
        <label class="form-label">Direcci√≥n</label>

        <select name="direccion_id" id="sss" class="form-select">
          {{#each rows}}
          <option value="{{this.id}}">{{this.nombre}}</option>
          {{/each}}
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label border border-primary">Sexo Visitante : </label>
        <div class="form-check form-check-inline">
          <label class="form-label">Masculino</label>
          <input type="radio" name="genero" value="M" id="" class="form-check-input">
        </div>
        <div class="form-check form-check-inline">
          <label class="form-label">Femenino</label>
          <input type="radio" name="genero" id="" value="F" class="form-check-input">
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label border border-primary ml-1">Ingreso del Visitante : </label>
        <div class="form-check form-check-inline">
          <label class="form-label">En Auto</label>
          <input type="checkbox" name="opcion" id="" onchange="cambio(this.checked)" class="form-check-input">
        </div>

        <div class="mb-3">
          <label class="form-label">Nro. Patente</label>
          <input name="nropatente" id="patente" type="text" class="form-control">
        </div>
        <div class="mb-3 text-center">
          <button class="btn bg-light my-3">Grabar</button>
        </div>
    </form>
    {{#if error}}
    <div class="alert alert-danger" role="alert">
      Visita Ya Existe !!!
    </div>
    {{/if}}
  </div>
</div>

<script>
  const patente = document.querySelector("#patente")
  const cambio = (checked) => {
    if (checked)
      patente.value = '';
    patente.disabled = checked;
  }
</script>