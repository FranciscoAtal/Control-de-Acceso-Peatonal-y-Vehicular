<div class="card bg-primary text-left mt-3 pb-3 mx-auto w-50">
  <div class="card-body">
    <form action="/creapropietarios" method="post">
      <h3 class="card-title text-center m-auto">Ingreso Propietarios</h3>
      <div class="mb-3">
        <label class="form-label">Rut</label>
        <input name="rut" type="text" class="form-control">
      </div>
      <div class="mb-3">
        <label class="form-label">Nombres</label>
        <input name="nombres" type="text" class="form-control">
      </div>
      <div class="mb-3">
        <label class="form-label">Apellidos</label>
        <input name="apellidos" type="text" class="form-control">
      </div>
      <div class="mb-3">
        <label class="form-label border border-primary">Sexo Propietario : </label>
        <div class="form-check form-check-inline">
          <label class="form-label">Masculino</label>
          <input type="radio" name="genero" value="M" id="" class="form-check-input">
        </div>
        <div class="form-check form-check-inline">
          <label class="form-label">Femenino</label>
          <input type="radio" name="genero" id="" value="F" class="form-check-input">
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label">Correo Electrónico</label>
        <input name="email" type="text" class="form-control">
      </div>
      <div class="mb-3">
        <label class="form-label">Celular Principal</label>
        <input name="celular1" type="text" class="form-control">
      </div>
      <div class="mb-3">
        <label class="form-label">Celular Secundario</label>
        <input name="celular2" type="text" class="form-control">
      </div>
           <div class="mb-3">
        <label class="form-label border border-primary">Situación : </label>
        <div class="form-check form-check-inline">
          <label class="form-label">Propietario</label>
          <input type="radio" name="situacion" value="P" id="" class="form-check-input">
        </div>
        <div class="form-check form-check-inline">
          <label class="form-label">Arrienda</label>
          <input type="radio" name="situacion" id="" value="A" class="form-check-input">
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label">Dirección</label>
        <select name="direccion_id" id="sss" class="form-select">
          {{#each rows}}
          <option value="{{this.id}}">{{this.nombre}}</option>
          {{/each}}
        </select>
      </div>
      <div class="mb-3 text-center">
        <button class="btn bg-light my-3">Grabar</button>
      </div>
    </form>
    {{#if error}}
    <div class="alert alert-danger" role="alert">
      Propietario Ya Existe !!!
    </div>
    {{/if}}
  </div>
</div>